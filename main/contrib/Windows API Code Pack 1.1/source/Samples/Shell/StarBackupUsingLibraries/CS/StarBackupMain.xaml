<PageFunction
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:local="clr-namespace:Microsoft.WindowsAPICodePack.Samples.StarBackupSample" 
    x:Class="Microsoft.WindowsAPICodePack.Samples.StarBackupSample.StarBackupMain"
    x:TypeArguments="local:WizardResult"
    Title="Star Backup - Main"
    Height="312" Width="513">
    <Grid Height="185" Width="406">
        <local:CommandLinkWPF x:Name="commandLink1" Link="Start a new backup" Note="Scan for new or updated files and back them up"
        Click="BackupClicked" Margin="0,0,81,0" Height="76" VerticalAlignment="Top"/>

        <local:CommandLinkWPF x:Name="commandLink2" Link="Restore existing backup"  
                              Note="Restore files from a backup made on this computer" 
                              Click="RestoreClicked" Margin="0,0,81,34" Height="57" VerticalAlignment="Bottom"/>
    </Grid>
</PageFunction>