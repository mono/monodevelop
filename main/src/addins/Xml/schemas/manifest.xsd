<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           targetNamespace="urn:schemas-microsoft-com:asm.v1" 
           xmlns="urn:schemas-microsoft-com:asm.v1" 
           elementFormDefault="qualified">

