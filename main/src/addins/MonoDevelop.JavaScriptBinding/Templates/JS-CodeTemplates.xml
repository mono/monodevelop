      <MimeType>application/javascript</MimeType>
      <Shortcut>forr</Shortcut>
      <_Description>Template for reverse 'for' loop</_Description>
      <TemplateType>SurroundsWith,Expansion</TemplateType>
    </Header>
    <Variables>
      <Variable name="index">
        <Default>i</Default>
        <_ToolTip>Index</_ToolTip>
      </Variable>
      <Variable name="max">
        <Default>max</Default>
        <_ToolTip>Number of iterations</_ToolTip>
      </Variable>
    </Variables>
    <Code>
      <![CDATA[for (var $index$ = $max$ - 1; $index$ >= 0; $index$--) {
    $selected$$end$
}]]>
    </Code>
  </CodeTemplate>

