	<Example name = "spaceExample"><![CDATA[
class ClassDeclaration {
	void TestMethod ()
	{
		try {
			TestMethod ('A');
		} catch (Exception e) {
			// Do something
		} finally {
			// Do something
		}
	}

	void TestMethod (char test)
	{
		switch (test) {
			case 'A':
				cout << "was A" << endl;
				break;
			case 'B':
				cout << "was B" << endl;
				break;
		}
	}

	void Calculate (int a, int b)
	{
		if (a < b) {
			for (int i = a; i < b; i++) {
				cout << i << endl;
			}
		} else {
			while (b < a) {
				cout << b++ << endl;
			}
		}
	}
};
]]></Example>

	<Example name = "operatorExample"><![CDATA[
class ClassDeclaration {
	void TestMethod ()
	{
		int a = 5 << 5;
		int b = (a + 5 - 3) * 6 / 2;
		a += b;
		a = a & ~255;
		if (a == b || b < a >> 1) {
			b -= a;
		}
	}
};
]]></Example>

	<Example name = "condOpExample"><![CDATA[
class ClassDeclaration {
	char GetSign (int i)
	{
		return i < 0 ? '-' : '+';
	}
};
]]></Example>

	<Example name = "switchExample"><![CDATA[
class ClassDeclaration {
	void Test (int i)
	{
		switch (i) {
			case 0:
				cout << "was zero" << endl;
				break;
			case 1:
				cout << "was one" << endl;
				break;
			default:
				cout << "was " << i << endl;
				break;
		}
	}
};
]]></Example>

	<Example name="simpleIf"><![CDATA[
class ClassDeclaration {
	void Test (int i)
	{
		if (i == 5) {
			cout << "== 5" << endl;
		} else if (i > 0) {
			cout << "> 0" << endl;
		} else if (i < 0) {
			cout << "< 0" << endl;
		} else {
			cout << "== 0" << endl;
		}
	}
};
]]></Example>

	<Example name="simpleWhile"><![CDATA[
class ClassDeclaration {
	void Test ()
	{
		while (true) {
			cout << "Hello World!" << endl;
		}
	}
};
]]></Example>

	<Example name="simpleDoWhile"><![CDATA[
class ClassDeclaration {
	void Test ()
	{
		int i = 0;
		do {
			cout << "Hello World!" << endl;
		} while (i++ < 10);
	}
};
]]></Example>

	<Example name="simpleFor"><![CDATA[
class ClassDeclaration {
	void Test ()
	{
		for (int i = 0; i < 10; i++) {
			cout << "Hello World!" << endl;
		}
	}
};
]]></Example>

	<Example name="simpleCatch"><![CDATA[
class ClassDeclaration {
	void Test ()
	{
		try {
			cout << ""Hello World!"" << endl;
		} catch (Exception) {
			cout << ""Got exception!!"" << endl;
		} finally {
			cout << ""finally done."" << endl;
		}
	}
};
]]></Example>

	<Example name="simpleSwitch"><![CDATA[
class ClassDeclaration {
	void Test (int i)
	{
		switch (i) {
			case 0:
				cout << "was zero" << endl;
				break;
			case 1:
				cout << "was one" << endl;
				break;
			default:
				cout << "was " << i << endl;
				break;
		}
	}
};
]]></Example>

