	</Extension>
	<Extension path = "/MonoDevelop/Ide/FileFilters">
		<FileFilter id = "ILAsm Files" _label = "ILAsm Files" extensions = "*.il"/>
	</Extension>

	<Extension path = "/MonoDevelop/ProjectModel/Gui/ItemOptionPanels/Build">
