			language="IL"
			extension="ilproj"
			guid="{B4EC64DC-6D44-11DD-AAB0-C9A155D89593}"
			type="ILAsmBinding.ILAsmProject" 
			msbuildSupport="NotSupported" />
	</Extension>
	
</ExtensionModel>
