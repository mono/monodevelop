<?xml version="1.0"?>
<Template
	originator="David Karlaš"
	created="2017/06/01"
	lastModified="2017/06/01">

	<TemplateConfiguration>
		<_Name>MVC View Layout Page</_Name>
		<Icon>md-html-file-icon</Icon>
		<_Category>ASP.NET Core</_Category>
		<LanguageName>C#</LanguageName>
		<DefaultFilename>_Layout</DefaultFilename>
		<_Description>Creates an MVC Razor Layout page.</_Description>
	</TemplateConfiguration>

	<Conditions>
		<Or>
			<AspNetCore />
			<ProjectCapability Name="DotNetCoreRazor"/>
		</Or>
	</Conditions>
	
	<!-- Template Content -->
	<TemplateFiles>
		<File name="${Name}.cshtml" src="MVCViewLayoutPage.cshtml" BuildAction="Content" />
	</TemplateFiles>
</Template>
