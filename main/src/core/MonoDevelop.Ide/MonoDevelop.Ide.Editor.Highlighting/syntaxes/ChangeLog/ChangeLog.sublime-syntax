name: "ChangeLog"
file_extensions:
  - ChangeLog
scope: source.cl
contexts:
  main:
    - include: comments
    - include: strings
  comments:
    - match: "^\\s*([*])"
      captures:
        1: entity.name.class.source.cl
      scope : entity.name.interface.source.cl
      push:
        - match: ','
          scope: entity.name.class.source.cl
        - match: ':'
          scope: entity.name.class.source.cl
          pop: true
  strings:
    - match: "(\\d{4}-\\d{2}-\\d{2})(.*)(\\<.*\\>)"
      captures:
        1: constant.numeric.source.cl
        2: string.quoted.single.source.cl
        3: entity.name.tag.source.cl
