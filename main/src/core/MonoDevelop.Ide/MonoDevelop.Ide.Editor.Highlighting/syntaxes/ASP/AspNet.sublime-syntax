name: "ASP.NET"
file_extensions:
  - aspx
  - ascx
  - master
  - Master
scope: source.aspnet
contexts:
  main:
    - include: comments
    - include: expressions
    - include: entities
  comments:
    - match: '<[%!]--'
      scope: comment.source.aspnet
      push:
        - include: commenttags
        - match: '-->'
          pop: true
  commenttags:
    - match: '\b((?i:todo)|(?i:fixme)|(?i:hack)|(?i:undone))\b'
      scope: markup.other.source.aspnet
  expressions:
    - match: '<%'
      scope: string.expr.source.aspnet
      push:
        - include: commenttags
        - match: '%>'
          pop: true
  entities:
    - match: '&([\w\d]+|#\d+|#[xX]\h+);'
      scope: constant.character.entity.html
    - match: '<!'
      push:
        - include: intag
        - match: '>'
          pop: true
    - match: '<!\[CDATA\['
      scope: constant.other.inline-data.html
      push:
        - match: '\]\]>'
          pop: true
    - match: '<\?'
      scope: constant.other.inline-data.html
      push:
        - match: '\?>'
          pop: true
    - match: '</'
      scope: entity.name.tag.source.aspnet
      push:
        - match: '>'
          pop: true
    - match: '(<)(\w+)'
      captures:
        1: punctuation.separator.source.aspnet
        2: entity.name.tag.source.aspnet
      push:
        - include: intag
        - match: '>'
          pop: true
  intag:
    - match: '\\b(\\w+)\\b\\s*(=)'
      captures:
        1: entity.other.attribute-name.source.aspnet
        2: punctuation.separator.source.aspnet
    - match: "'"
      scope: string.quoted.single.source.aspnet
      push:
        - match: "('|$\n?)"
          pop: true
    - match: '"'
      scope: string.quoted.double.source.aspnet
      push:
        - match: '("|$\n?)'
          pop: true