<SyntaxMode name = "Asp.Net" mimeTypes="application/x-aspx;application/x-ascx;application/x-master-page">
	<!-- directives -->
	<Span color = "Html Server-Side Script" tagColor="Html Server-Side Script" rule = "InTag">
		<Begin>&lt;%@</Begin>
		<End>%&gt;</End>
	</Span>
	
	<!-- comments -->
	<Span color = "Html Comment" rule = "Comment">
		<Begin>&lt;%--</Begin>
		<End>--%&gt;</End>
	</Span>
	
	<Span color = "Html Comment" rule = "Comment">
		<Begin>&lt;!--</Begin>
		<End>--&gt;</End>
	</Span>

	<!-- inline javascript -->
	<Span tagColor="Html Tag Delimiter" color="Html Element Name" rule="InJavascript">
		<Begin>&lt;script</Begin>
		<End>&lt;/script&gt;</End>
	</Span>
	
	<!-- expressions -->
	<Span color = "Razor Code" tagColor="Html Server-Side Script">
		<Begin>&lt;%</Begin>
		<End>%&gt;</End>
	</Span>
	
	<!-- entities -->
	<Span color = "Html Entity">
		<Begin>&amp;</Begin>
		<End>;</End>
	</Span>
	
	<Span tagColor = "Html Tag Delimiter" color = "Html Attribute Name" rule = "InDocType">
		<Begin>&lt;!</Begin>
		<End>&gt;</End>
	</Span>
	
	<!-- CDATA section -->
	<Span tagColor = "Html Tag Delimiter" color = "Xml CData Section" rule = "Comment">
		<Begin>&lt;![CDATA[</Begin>
		<End>]]&gt;</End>
	</Span>
	
	<!-- processing instructions -->
	<Span tagColor = "Keyword(Declaration)" color = "Html Element Name" rule = "InTag">
		<Begin>&lt;?</Begin>
		<End>?&gt;</End>
	</Span>
	
	<!-- tags -->
	<Span tagColor = "Html Tag Delimiter" color = "Html Element Name" rule = "InTag">
		<Begin>&lt;/</Begin>
		<End>&gt;</End>
	</Span>
	
	<Span tagColor = "Html Tag Delimiter" color = "Html Element Name" rule = "InTag">
		<Begin>&lt;</Begin>
		<End>&gt;</End>
	</Span>
	
	<!-- tag definitions -->
	<Rule name = "InDocType">
		<Span color = "Xml Attribute">
			<Begin>&amp;</Begin>
			<End>;</End>
		</Span>
		<Keywords color = "Html Element Name">
			<Word>DOCTYPE</Word>
		</Keywords>
	</Rule>
	
	<Rule name = "InTag">
		<Span color = "Html Attribute Value" rule="InLiteral">
			<Begin>&quot;</Begin>
			<End>&quot;</End>
		</Span>
		
		<Span color = "Html Attribute Value" rule="InLiteral">
			<Begin>&apos;</Begin>
			<End>&apos;</End>
		</Span>
		
		<!-- comments -->
		<Span color = "Html Comment" rule = "Comment">
			<Begin>&lt;%--</Begin>
			<End>--%&gt;</End>
		</Span>
	
		<!-- expressions -->
		<Span color = "Razor Code" tagColor="Html Server-Side Script">
			<Begin>&lt;%</Begin>
			<End>%&gt;</End>
		</Span>
		
		<!-- attributes -->
		<Match expression="([A-Za-z0-9_]+[:[A-Za-z0-9_]+]?)([\s\n\r]*=)">
			<Group color = "Html Attribute Name"/>
			<Group color = "Html Operator"/>
		</Match>
	</Rule>
	
	<Rule name = "InLiteral">
		<!-- entities -->
		<Span color = "Html Entity">
			<Begin>&amp;</Begin>
			<End>;</End>
		</Span>
		
		<!-- expressions -->
		<Span color = "Razor Code" tagColor="Html Server-Side Script">
			<Begin>&lt;%</Begin>
			<End>%&gt;</End>
		</Span>
	</Rule>
	
	<Rule name = "Comment">
	</Rule>

	<Rule name="InJavascript">
		<EolSpan color="Comment(Line)" rule="Comment">//</EolSpan>
		<Span color="Comment(Line)" rule="Comment">
			<Begin>/*</Begin>
			<End>*/</End>
		</Span>
		<!-- To detect regex in Javascript -->
		<Match color="Script String">(?&lt;!\\)\/.*?(?&lt;!\\)\/[a-zA-Z]?</Match>
		<Span color="String" stopateol="true" escape="\">
			<Begin>"</Begin>
			<End>"</End>
		</Span>
		<Span color="String" stopateol="true" escape="\">
			<Begin>'</Begin>
			<End>'</End>
		</Span>
		<Match color="Number">CSharpNumber</Match>
		<Keywords color="Keyword(Access)">
			<Word>this</Word>
		</Keywords>
		<Keywords color="Keyword(Operator)">
			<Word>new</Word>
			<Word>typeof</Word>
		</Keywords>
		<Keywords color="Keyword(Selection)">
			<Word>else</Word>
			<Word>if</Word>
		</Keywords>
		<Keywords color="Keyword(Iteration)">
			<Word>do</Word>
			<Word>for</Word>
			<Word>while</Word>
		</Keywords>
		<Keywords color="Keyword(Jump)">
			<Word>break</Word>
			<Word>continue</Word>
			<Word>return</Word>
		</Keywords>
		<Keywords color="Keyword(Exception)">
			<Word>try</Word>
			<Word>throw</Word>
			<Word>catch</Word>
			<Word>finally</Word>
		</Keywords>
		<Keywords color="Keyword(Constants)">
			<Word>true</Word>
			<Word>false</Word>
			<Word>null</Word>
		</Keywords>
		<Keywords color="Keyword(Type)">
			<Word>var</Word>
			<Word>function</Word>
		</Keywords>
		<Rule name="Comment">
			<Keywords color="Comment Tag" ignorecase="True">
				<Word>TODO</Word>
				<Word>FIXME</Word>
				<Word>HACK</Word>
				<Word>UNDONE</Word>
			</Keywords>
		</Rule>
	</Rule>
</SyntaxMode>