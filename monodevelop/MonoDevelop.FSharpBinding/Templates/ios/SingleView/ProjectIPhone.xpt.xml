<?xml version="1.0"?>
<Template>
	<TemplateConfiguration>
		<_Name>Single View Application</_Name>
		<_Category>ios/app/classic</_Category>
		<Icon>md-project-iphone</Icon>
		<Image id="md-ios-single-view-app" />
		<LanguageName>F#</LanguageName>
		<_Description>Single view application project for iPhone and iPad with storyboard support.</_Description>
		<Wizard>MonoDevelop.IPhone.ProjectTemplateWizard</Wizard>
		<_GroupId condition="Device=IPhone">md-single-view-ios-classic</_GroupId>
		<_DefaultParameters>MinimumOSVersion=7.0</_DefaultParameters>
	</TemplateConfiguration>
	
	<Actions>
		<Open filename = "AppDelegate.fs"/>
	</Actions>
	
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "MonoTouch">
			<References>
				<Reference type="Gac" refto="System, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="System.Xml, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="System.Core, Version=2.0.5.0, Culture=neutral, PublicKeyToken=7cec85d7bea7798e" />
				<Reference type="Gac" refto="mscorlib" />
				<Reference type="Gac" refto="FSharp.Core" />
				<Reference type="Gac" refto="monotouch" />
			</References>
			<Files>
				<Directory name="Resources">
					<RawFile name="Default-568h@2x.png" src="../Common/Default-568h.png" />
				</Directory>
				<File name="Info.plist" AddStandardHeader="False" src="../Common/Info_iPhone.plist.xml" />
				<File name="Entitlements.plist" AddStandardHeader="False" src="../Common/Entitlements.plist.xml" />
				<File name="${SafeProjectName}ViewController.fs" AddStandardHeader="True"
					src="IPhone/ViewController.fs" />
				<File name="AppDelegate.fs" AddStandardHeader="True" src="Common/AppDelegate.fs" />
			</Files>
		</Project>
	</Combine>
</Template>
